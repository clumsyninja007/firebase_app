extends layout

block content
  div.container
    div.row
      div.col
      div.col-8
        table.table
          thead
            tr
              th(scope="col")
                h1 Upload a new CSV
          tbody
            tr
              td
                div.input-group.mb-3
                  div.custom-file
                    input#inputGroupFile02.custom-file-input(type="file")
                    label.custom-file-label(for="inputGroupFile02", aria-describedby="inputGroupFileAddon02")
                      | Choose file
                    div.input-group-append
                      span#inputGroupFileAddon02.input-group-text
                        | Upload
      div.col